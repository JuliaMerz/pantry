{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "pantry",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "request": true,
        "scope": [
          "https://raw.githubusercontent.com/JuliaMerz/pantry/master/models/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/tauri-icon-bw-32.png",
        "icons/tauri-icon-bw-128.png",
        "icons/tauri-icon-bw-256.png",
        "icons/tauri-icon-bw-1024.icns",
        "icons/tauri-icon-bw-256.ico"
      ],
      "identifier": "com.jmerz.pantry",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/tauri-icon-halfwayst-32.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Pantry",
        "width": 1024,
        "height": 900
      }
    ],
    "cli": {
      "description": "",
      "longDescription": "",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [],
      "subcommands": {
        "list": {
          "description": "Lists running, available, or downloadable LLM configurations. Defaults to running",
          "longDescription": "",
          "beforeHelp": "",
          "afterHelp": "",
          "args": [],
          "subcommands": {
            "running": {
              "description": "Lists running LLM configurations.",
              "longDescription": "",
              "beforeHelp": "",
              "afterHelp": "",
              "args": []
            },
            "available": {
              "description": "Lists available LLM configurations.",
              "longDescription": "",
              "beforeHelp": "",
              "afterHelp": "",
              "args": []
            },
            "downloadable": {
              "description": "Lists downloadable LLM configurations.",
              "longDescription": "",
              "beforeHelp": "",
              "afterHelp": "",
              "args": []
            }
          }
        },
        "activate": {
          "description": "Activates an LLM configuration.",
          "longDescription": "",
          "beforeHelp": "",
          "afterHelp": "",
          "args": [
            {
              "name": "llm_id",
              "index": 1,
              "takesValue": true
            }
          ],
          "subcommands": {}
        },
        "deactivate": {
          "description": "Lists running, available, or downloadable LLM configurations. Defaults to running",
          "longDescription": "",
          "beforeHelp": "",
          "afterHelp": "",
          "args": [
            {
              "name": "llm_id",
              "index": 1,
              "takesValue": true
            }
          ],
          "subcommands": {}
        },
        "path": {
          "description": "Gets the model path of a downloaded LLM",
          "longDescription": "",
          "beforeHelp": "",
          "afterHelp": "",
          "args": [
            {
              "name": "llm_id",
              "index": 1,
              "takesValue": true
            }
          ],
          "subcommands": {}
        }
      }
    }
  }
}
